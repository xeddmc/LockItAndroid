<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="30dp"
    android:background="@color/backgroundColor">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/signup_label"
        android:src="@drawable/lockitlogo"
        android:id="@+id/icon_image_view"/>


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/signup_label"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="Login"
        android:layout_marginTop="50dp"
        android:layout_above="@id/email_textField"
        android:textColor="@color/lockitWhite"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/email_textField"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:background="@color/lockitWhite"
        android:backgroundTint="@color/backgroundColor"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/lockitWhite"
        android:textColorHint="@color/backgroundLightGray" />

    <EditText
        android:id="@+id/password_textField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/email_textField"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:background="@color/lockitWhite"
        android:backgroundTint="@color/backgroundColor"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/lockitWhite"
        android:textColorHint="@color/backgroundLightGray" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@id/password_textField"
        android:layout_centerHorizontal="true"
        android:background="@color/backgroundGray"
        android:id="@+id/login_button"
        android:textColor="@color/lockitYellow"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:text="Login"/>

</RelativeLayout>